<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFAFA"
    tools:context="com.tejtron.secufone.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logged in as xyz@gmail.com"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:id="@+id/tvUserName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Advisoryy"
        android:id="@+id/btnInvisible"
        android:layout_below="@+id/tvUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:theme="@style/AppButton"
        android:visibility="invisible"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perform Test"
        android:id="@+id/btnPerformTest"
        android:layout_above="@+id/btnScore"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/btnInvisible"
        android:layout_alignStart="@id/btnInvisible"
        android:layout_alignRight="@id/btnInvisible"
        android:layout_alignEnd="@id/btnInvisible"
        android:layout_marginBottom="40dp"
        android:theme="@style/AppButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Scores"
        android:id="@+id/btnScore"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnInvisible"
        android:layout_alignStart="@id/btnInvisible"
        android:layout_alignRight="@id/btnInvisible"
        android:layout_alignEnd="@id/btnInvisible"
        android:theme="@style/AppButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Advisory"
        android:id="@+id/btnReco"
        android:layout_alignLeft="@+id/btnInvisible"
        android:layout_alignStart="@id/btnInvisible"
        android:layout_alignRight="@id/btnInvisible"
        android:layout_alignEnd="@id/btnInvisible"
        android:layout_below="@+id/btnScore"
        android:layout_marginTop="40dp"
        android:theme="@style/AppButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Name: Tej G3"
        android:id="@+id/tvDeviceName"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>